<style>
  /* General form styling */
  #resetPasswordDiv {
    width: 300px;
    position: absolute; /* Position absolutely for centering */
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%); /* Center horizontally and vertically */
    padding: 20px;
    border: 1px solid #ccc;
    border-radius: 5px;
    background-color: #f5f5f5;
  }

  /* Form heading */
  h1 {
    text-align: center;
    margin-bottom: 20px;
  }

  /* Image logo */
  #logo {
    width: 50px; /* Adjust as needed */
    height: auto;
    display: block;
    margin: 0 auto 10px; /* Center align and add margin below */
  }

  /* Label and input fields */
  label {
    display: block;
    margin-bottom: 5px;
  }

  input[type="password"] {
    width: 100%;
    padding: 10px;
    border: 1px solid #ccc;
    border-radius: 3px;
    margin-bottom: 15px;
  }

  /* Button */
  #newPassword {
    background-color: #4caf50;
    color: white;
    padding: 10px 20px;
    border: none;
    border-radius: 3px;
    cursor: pointer;
  }
</style>

<div>
  <div id="resetPasswordDiv">
    <img
      src="https://seeklogo.com/images/R/risingwave-icon-logo-837E37238C-seeklogo.com.png"
      id="logo"
    />
    <h1 for="newPassword">Reset Password Request</h1>
    <form id="resetPasswordForm" action="/reset-password" method="post">
      <input type="hidden" name="resetToken" value="<%= resetToken %>" />
      <label for="newPassword">Enter your new password:</label>
      <input type="password" id="newPassword" name="newPassword" required />
      <button type="submit">Reset Password</button>
    </form>
  </div>
</div>
